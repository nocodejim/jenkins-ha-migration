# Jenkins Configuration
JENKINS_ADMIN_USER=admin
JENKINS_ADMIN_PASSWORD=ChangeMe123!
JENKINS_URL=https://jenkins.example.com

# Docker Configuration
COMPOSE_PROJECT_NAME=jenkins-ha
JENKINS_HOME_PATH=./jenkins_home

# Resource Limits
JENKINS_MEMORY_LIMIT=4g
JENKINS_CPU_LIMIT=2

# Kubernetes Configuration
K8S_NAMESPACE=jenkins-prod
K8S_STORAGE_CLASS=nfs-client
K8S_INGRESS_CLASS=nginx

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTMANAGER_ENABLED=true

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_S3_BUCKET=jenkins-backups

# Security
ENABLE_SECURITY_SCANNING=true
ENABLE_COMPLIANCE_CHECKS=true
